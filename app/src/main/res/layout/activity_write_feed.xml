<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_FFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_open_feed_top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/color_1C2E52"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_open_feed_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_back_white" />

            <TextView
                android:id="@+id/tv_open_feed_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:includeFontPadding="false"
                android:text="@string/feed_writing"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_open_feed_top"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="44dp">

            <LinearLayout
                android:id="@+id/cl_open_feed_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_feed_project_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretandard_bold"
                    android:text="@string/feed_write_project_select"
                    android:textColor="@color/color_191919"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_feed_project_select_open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_stroke_e6e6e6_radius_10"
                    android:hint="@string/feed_write_project_select_hint"
                    android:maxLines="1"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/color_000000"
                    android:textColorHint="@color/color_828282"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_feed_project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretandard_bold"
                    android:text="@string/feed_write_project_name"
                    android:textColor="@color/color_191919"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ev_feed_project_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_stroke_e6e6e6_radius_10"
                    android:hint="@string/feed_write_project_name"
                    android:maxLines="1"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/color_000000"
                    android:textColorHint="@color/color_828282"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_feed_project_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretandard_bold"
                    android:text="@string/feed_write_project_type"
                    android:textColor="@color/color_191919"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_feed_project_type_open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_stroke_e6e6e6_radius_10"
                    android:hint="@string/feed_write_project_select_hint"
                    android:maxLines="1"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/color_000000"
                    android:textColorHint="@color/color_828282"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_feed_project_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretandard_bold"
                    android:text="@string/feed_write_project_kind"
                    android:textColor="@color/color_191919"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_feed_project_kind_open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_stroke_e6e6e6_radius_10"
                    android:hint="@string/feed_write_project_select_hint"
                    android:maxLines="1"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/color_000000"
                    android:textColorHint="@color/color_828282"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_feed_project_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretandard_bold"
                    android:text="@string/feed_write_link"
                    android:textColor="@color/color_191919"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ev_feed_project_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_stroke_e6e6e6_radius_10"
                    android:hint="@string/feed_write_link"
                    android:maxLines="1"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/color_000000"
                    android:textColorHint="@color/color_828282"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_feed_project_stack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretandard_bold"
                    android:text="@string/feed_write_stack"
                    android:textColor="@color/color_191919"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_feed_project_stack_open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_stroke_e6e6e6_radius_10"
                    android:hint="@string/feed_write_stack_hint"
                    android:maxLines="1"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="16dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/color_000000"
                    android:textColorHint="@color/color_828282"
                    android:textSize="14sp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/et_project_stack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_project_stack" />

                <TextView
                    android:id="@+id/tv_feed_project_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/pretandard_bold"
                    android:text="@string/feed_write_detail_description"
                    android:textColor="@color/color_191919"
                    android:textSize="14sp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_image"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@color/color_E6E6E6"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:id="@+id/iv_feed_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:padding="26dp"
                        android:src="@drawable/ic_camera" />
                </com.google.android.material.card.MaterialCardView>

                <EditText
                    android:id="@+id/et_project_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rectangle_stroke_e6e6e6_radius_10"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="start"
                    android:hint="@string/open_project_detail_description"
                    android:includeFontPadding="false"
                    android:minLines="11"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="20dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_finish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/rectangle_fill_1c2e52_radius_10"
                    android:enabled="false"
                    android:fontFamily="@font/pretandard_bold"
                    android:paddingVertical="18dp"
                    android:text="@string/sign_up_org_step_two_done"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_open_project_introduction" />

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>